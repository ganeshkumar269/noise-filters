{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "mingw32-g++.exe build active file",
            "command": "mingw32-g++.exe",
            "args": [
                "${file}",
                "${fileDirname}\\stdsfmllib.cpp",
                "-std=c++14",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:\\LIBRARIES",
                "-IC:\\SFML-2.5.1\\include",
                "-LC:\\SFML-2.5.1\\lib",
                "-lsfml-graphics", 
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "C:/Program Files (x86)/CodeBlocks/MinGW/bin"
            }
        }
    ]
}